/*these are mainly for the MAX MSP wrapper, which is experimental at best*/#include "myron.h"static Myron *m = 0;extern "C" void myron_start(int w,int h){	if(m==0){		m = new Myron(); 		m->start(w,h);	} else {		m->stop();		delete m;		m = new Myron();		m->start(w,h);	}}extern "C" void myron_stop(){	if(m!=0){		m->stop();		delete m;		m = 0;	}}extern "C" void myron_update(){	if(m==0)return;	m->update();}extern "C" unsigned char* myron_version(){	if(m==0)return (unsigned char*)"";	return m->version();}extern "C" int myron_globCount(){	if(m==0)return;	return m->globCount();}